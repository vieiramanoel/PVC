#include <opencv2/core/core.hpp>
#include <iostream>
#include <string>

#include <ReadData.h>

void ReadData::write(cv::FileStorage& fs, const std::string&, const ReadData& x)
{
    x.write(fs);
}
void ReadData::read(const cv::FileNode& node, ReadData& x, const ReadData& default_value = ReadData()){
    if(node.empty())
        x = default_value;
    else
        x.read(node);
}

// This function will print our custom class to the console
static std::ostream& operator<<(std::ostream& out, const ReadData& m)
{
    out << "{ id = " << m.id << ", ";
    out << "X = " << m.X << ", ";
    out << "A = " << m.A << "}";
    return out;
}
