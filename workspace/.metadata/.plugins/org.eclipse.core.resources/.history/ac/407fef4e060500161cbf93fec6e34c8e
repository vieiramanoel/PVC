    	intr.open(intrinsics, cv::FileStorage::READ);
    	int itNr;
    	std::cout << itNr;
    	if (!dst.isOpened() || !intr.isOpened()){
    		std::cerr << "Failed to open " << filename << endl;
			help(av);
			return 1;
    	}
    }
